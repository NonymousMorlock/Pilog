# Pilog Configuration

# Time window in minutes for clustering nearby landing records (1-60)
# Default: 10
LANDING_CLUSTER_MINUTES=10

# Flask environment: development or production
# Default: development
FLASK_ENV=development

# Flask debug mode (only use in development!)
# Default: True
FLASK_DEBUG=True

# Allow CORS from specific origins (comma-separated)
# Default: * (allow all - only for development!)
# CORS_ORIGINS=http://localhost:5000,http://localhost:3000

# Directory to watch for logbook files
# If not set, uses manual selection or default logs/ folder
# WATCHED_FOLDER=/path/to/xplane/logs

# Directory or file for landing rate data
# Can be a folder (watches for LandingRate.log) or specific file path
# LANDING_RATE_PATH=/path/to/landing/logs

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO
